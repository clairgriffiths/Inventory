<div class="container">
  <h1 style="text-align: center;"><%= @cupboard.name %></h1>
 
  <div>
    <% @cupboard.categories.each do |category| %>
      <%= link_to "#{category.name}", root_path(:anchor => "#{category.name}"), class: "btn btn-default btn-sm" %>
    
  </div>
  <br>
  <% category.items.each do |item| %>
  
  <div>
  <table class="table table-condensed">
    <thead>
      <tr>
        <td id="<%= category.name %>"><strong><%= category.name %></strong></td>
      </tr>
    </thead>
    <tbody>
      <tr>
        
        <td class="name" ><%= item.name %></td>
        <% if item.quantity? %>
          <td><%= item.quantity %></td>
        <% else %>
          <td><%= item.grams %>g</td>
        <% end %>
        
        <!-- This isn't working, wrong route?? -->
        <td><%= link_to increase_item_path(item), class: "btn btn-default" do %>
          <i class="glyphicon glyphicon-plus"></i>
        <% end %>
          <%= link_to decrease_item_path(item), class: "btn btn-default" do %>
          <i class="glyphicon glyphicon-minus"></i>
        <% end %>
        </td>
        
        
      </tr>
     
    </tbody>
    <% end %>
  </table>
  </div>
  
  
