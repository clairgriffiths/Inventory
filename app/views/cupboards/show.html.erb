<div class="container">
  <div class="row head">
    <div class="col-md-2">
      <h1 class="heading"><%= @cupboard.name %></h1>
      <p class="top-button"><%= link_to "Back to Cupboards", cupboards_path, class: "btn btn-default" %></p>
    </div>
  </div>
  
  <div class="row category-jumplinks">
    <% @cupboard.categories.each do |category| %>
      <%= link_to "#{category.name}", cupboard_path(:anchor => "#{category.name}"), class: "btn btn-default" %>
    <% end %>
  </div>
  
  <br>
  
  <div class="col-md-8">
    <% @cupboard.categories.each do |category| %>
    <h4 class="category-name" id="<%= category.name %>"><%= category.name %></h4>
     <table class="table" >
      <tbody>
        <tr>
          <% @cupboard.category_items(category).each do |item| %>
            <td class="plus-and-minus"><%= link_to increase_item_path(item), class: "btn btn-default" do %>
              <i class="glyphicon glyphicon-plus"></i>
            <% end %>
              <%= link_to decrease_item_path(item), class: "btn btn-default" do %>
                <i class="glyphicon glyphicon-minus"></i>
              <% end %>
            </td>
            <% if item.weight? %>
              <td class="quantity"><%= item.quantity %> x <%= item.weight %>g</td>
            <% else %>
              <td class="quantity"><%= item.quantity %> x <%= item.packnumber %></td>
            <% end %>
            <td class="name"><%= item.name %></td>
            <% if item.portion? %>
              <td class="portion-minus"> <%= link_to decrease_by_portion_item_path(item), class: "btn btn-default" do %>
                 <i class="glyphicon glyphicon-minus"></i>
               <% end %>
              </td>
            <td><%= item.portion %></td>
            <% end %>
        </tr>
        <% end %>
      </tbody>
     </table>
    <% end %> <!--cupboard categories-->
   </div>
</div>
  
