<div class="container">
  <div class="row head">
    <div class="col-md-2">
      <h1 class="heading">Recipes I can make now</h1>
      <p class="top-button"><%= link_to "Back to recipes", recipes_path, class: "btn btn-default"  %></p>
    </div>
  </div>
  
  
  <div class="col-md-8">
  
    <% @recipes.each do |recipe| %>
    <table class="table">
      <tr>
       
          <img class="center-block" style="width: 100px;", src="<%= recipe.picture_url %>">
          <td><%= link_to recipe.name, recipe_path(recipe) %></td>
        
      </tr>
    </table>
    <% end %>
  </div>
  
</div>