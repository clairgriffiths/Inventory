<div class="container">
  <div class="row head">
    <div class="col-md-2">
      <h1 class="heading">Hypothetical recipes I can make now</h1>
      <p class="top-button"><%= link_to "All recipes", recipes_path, class: "btn btn-default"  %></p>
    </div>
  </div>

      <%= form_tag(recipes_hypothetical_make_now_path, :method => "get") do %>
        <%= text_field_tag :hypo_item, params[:hypo_item], class: "form-control", placeholder: "Enter your Hypo item" %><br>
        <button class="btn btn-default", type="submit">Submit</button>
      <% end %>
      <% if params[:hypo_item] != nil %>
        <% if @hypo_recipes != [] %>
          <p>If you were to buy <%= @hypo_items.join(" & ") %> you could make:</p>
          <% @hypo_recipes.each do |recipe| %>
            <table class="table">
              <img class="center-block" style="width: 100px;", src="<%= recipe.picture_url %>">
              <td><%= link_to recipe.name, recipe_path(recipe) %></td>
            </table>
            <% end %>
        <% else %>
          <p>I'm afraid there aren't any recipes you can make with that </p>
        <% end %>
      <% end %>
</div>
