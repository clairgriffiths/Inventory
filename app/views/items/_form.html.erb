
  <div class="formtitle">
    <%= bootstrap_form_for @item do |form| %>
    <% if @item.errors.any? %>
        <div id="error_explanation">
          <h5><%= pluralize(@item.errors.count, "error") %> prohibited this entry from being saved:</h5>
          <ul>
            <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>


    <%= form.text_field :name %>
    <%= form.number_field :ean %>
    <%= form.number_field :quantity %>
    <%= form.select(:category_id, @category_options) %>
    <%= form.select(:cupboard_id, @cupboard_options) %>
    <%= form.number_field :weight %>
    <%= form.number_field :packnumber %>
    <%= form.check_box :shopping_list %>
    <%= form.submit %>
    <% end %>
    
  </div>
