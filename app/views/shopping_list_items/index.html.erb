<div class="container">
  <div class="row head">
    <div class="col-md-2">
      <h1 class="heading">Shopping Lists</h1>
      <p class="top-button"><%= link_to "Add item manually", new_shopping_list_item_path, class: "btn btn-default" %></p>
      <p class="top-button"><%= link_to "Back to Cupboards", cupboards_path, class: "btn btn-default" %></p>
    </div>
  </div>
  
 
  <% grouped_items.each do |list, item| %>
    <h4 class="category-name"><%= list %></h4>
      <table class="table">
        <tbody>
         <% item.each do |item| %>
          <tr>       
            <td><%= item.name %></td>
            <td><%= link_to 'Bought', shopping_list_item_path(item), method: :delete, class: "btn btn-default" %></td>
          </tr>
          <% end %>
        </tbody>
  
  <% end %>
  
</div>
