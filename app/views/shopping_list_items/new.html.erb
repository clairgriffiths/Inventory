<div class="container">
  <div class="row head">
    <h1 class="heading">Shopping List Items</h1>
  </div>
    <div class="formtitle">
    <%= bootstrap_form_for @item do |form| %>
      <% if @item.errors.any? %>
          <div id="error_explanation">
            <h5><%= pluralize(@item.errors.count, "error") %> prohibited this entry from being saved:</h5>
            <ul>
              <% @item.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form.text_field :name %>
        <%= form.select(:list, options_for_select([['Week Shop'], ['Big Shop']])) %>
        <%= form.submit %>
      <% end %>
    </div>
</div>